mixin markdown(text)
    | !{ self.md(text) }

- const title = self.title ? `${self.title} Â· ${self.siteTitle}` : self.siteTitle

doctype html
html(lang=self.locale)
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')

        base(href='/unicorn/')

        link(href='./style.css', rel='stylesheet')

        title= title
    body
        article.mx-auto.p-4.prose.md_prose-md.dark_prose-invert
            if self.title
                h1(class={ '!mb-0': self.subtitle })= self.title
            if self.subtitle
                .mb-10.font-bold.text-2xl.text-gray-400(class='!mt-0')= self.subtitle
            block content
